{% set companyLogo  = config("Ceres.header.company_logo") %}
{% set lang         = services.sessionStorage.getLang() %}

<nav class="navbar">
      <div class="container-max">
        <div class="row">
             <div class="brand-wrapper">
                 <a class="navbar-brand pull-lg-left" href="/">
                     <img src="{{ companyLogo }}" class="img-fluid"/>
                 </a>

                <button id="btnMainMenuToggler" class="navbar-toggler hidden-lg-up" type="button">
                     &#9776;
                </button>
             </div>

            <div id="mainNavbarCollapsable">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a>Alle</a></li>
                    <li class="btnClose"></li>
                </ul>
                 <ul class="mainmenu">
                     {% set categories = services.category.getNavigationTree("item", lang) %}
                     {% set level = 1 %}
                     {% include "Ceres::PageDesign.Partials.Header.NavigationList" with  { 'categories' : categories, 'level' : level } %}
                 </ul>
             </div>
        </div>
    </div>
</nav>
